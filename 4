#include <iostream>
using namespace std;
int main()
{
    setlocale(LC_ALL, "Russian");
    cout << "Александр Пушкин" << endl;
    cout << endl;
    cout << "Ты и Вы" << endl;
    cout << endl;
    cout << "Пустое вы сердечным ты" << endl;
    cout << "Она, обмолвясь, заменила" << endl;
    cout << "И все счастливые мечты" << endl;
    cout << "В душе влюбленной возбудила." << endl;
    cout << "Пред ней задумчиво стою," << endl;
    cout << "Свести очей с нее нет силы;" << endl;
    cout << "И говорю ей: как вы милы!" << endl;
    cout << "И мыслю: как тебя люблю!" << endl;
}
